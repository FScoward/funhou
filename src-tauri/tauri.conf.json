{
  "productName": "funhou",
  "version": "0.1.0",
  "identifier": "com.funhou.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "app": {
    "windows": [
      {
        "title": "funhou - 分報ツール",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:webview:allow-internal-toggle-devtools",
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:funhou.db"]
    }
  }
}
