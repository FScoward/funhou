{
  "productName": "funhou",
  "version": "0.1.0",
  "identifier": "com.funhou.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "funhou - 分報ツール",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      },
      {
        "label": "tab",
        "title": "",
        "url": "tab.html",
        "width": 20,
        "height": 100,
        "x": 0,
        "y": 300,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main", "tab"],
          "permissions": [
            "core:default",
            "core:webview:allow-internal-toggle-devtools",
            "core:window:allow-set-always-on-top",
            "core:window:allow-set-position",
            "core:window:allow-outer-position",
            "core:window:allow-outer-size",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-is-visible",
            "core:window:allow-set-focus",
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:funhou.db"]
    }
  }
}
